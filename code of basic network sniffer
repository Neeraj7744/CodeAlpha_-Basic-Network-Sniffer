from scapy.all import sniff, IP, TCP, UDP, ICMP

def process_packet(packet):
    if IP in packet:
        ip_layer = packet[IP]
        src = ip_layer.src
        dst = ip_layer.dst
        proto = ip_layer.proto

        if TCP in packet:
            protocol = "TCP"
        elif UDP in packet:
            protocol = "UDP"
        elif ICMP in packet:
            protocol = "ICMP"
        else:
            protocol = str(proto)

        print(f"[{protocol}] {src} --> {dst}")
        print(f"Payload: {bytes(packet[IP].payload)}\n{'-'*50}")

# Start sniffing (requires sudo)
print("🔍 Starting packet sniffing... Press Ctrl+C to stop.")
sniff(filter="ip", prn=process_packet, store=False)
